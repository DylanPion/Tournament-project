<p id="notice"><%= notice %></p>

<h1>Nom de l'équipe : <strong><%= @team.name %></strong></h1>

<table class="min-w-full divide-y divide-gray-200 mt-4">
  <thead class="bg-gray-50">
    <tr>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Niveau</th>
      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rôle</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @team.players.each do |player| %>
      <tr>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= player.first_name %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= player.last_name %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= player.level %></td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= player.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_team_path(@team) %> |
<%= link_to 'Back', teams_path %>