<%= form_with(model: @team, html: { class: "form" }) do |form| %>
<h1 class="form-title"><%= action_name.capitalize %> Team</h1>

  <% if @team.errors.any? %>
    <div id="error_explanation" class="form-errors">
      <h2><%= pluralize(@team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% @team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "form-submit" %>
  </div>
<% end %>

<%= link_to 'Back', teams_path, class: "back-link" %>
