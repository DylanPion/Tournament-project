<h1>Players of <%= @team.name %></h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Level</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.level %></td>
        <td><%= player.role %></td>
        <td><%= link_to 'Show', team_player_path(@team, player) %></td>
        <td><%= link_to 'Edit', edit_team_player_path(@team, player) %></td>
        <td><%= link_to 'Destroy', team_player_path(@team, player), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_team_player_path(@team) %> |
<%= link_to 'Back to Team', team_path(@team) %>